{% extends 'base.html.twig' %}

{% block title %}Créer une nouvelle fiche de poste{% endblock %}

{% block body %}
<style>
    .form-wrapper { 
        margin: 1em auto; 
        max-width: 800px; 
        width: 95%; 
        font: 18px/1.5 sans-serif; 
        background-color: #f0f4f8; 
        padding: 2em; 
        border-radius: 10px; 
        border: 1px solid #ddd; 
    }
    .form-wrapper h1 { 
        text-align: center; 
        color: #333; 
        margin-bottom: 1em; 
    }
    .form-wrapper form div { 
        margin-bottom: 1em; 
    }
    .form-wrapper form label { 
        display: block; 
        margin-bottom: 0.5em; 
        color: #333; 
    }
    .form-wrapper form input, .form-wrapper form select, .form-wrapper form textarea { 
        width: 100%; 
        padding: 0.5em; 
        border: 1px solid #ddd; 
        border-radius: 5px; 
    }
    .form-wrapper form button { 
        margin-top: 1em; 
        padding: 0.5em 1em; 
        background: #007BFF; 
        color: white; 
        border: none; 
        border-radius: 5px; 
        cursor: pointer; 
    }
    .form-wrapper a { 
        display: inline-block; 
        margin-top: 1em; 
        color: #007BFF; 
        text-decoration: none; 
    }
    .form-wrapper a:hover { 
        text-decoration: underline; 
    }
</style>


    <div class="form-wrapper">
        <h1>Créer une nouvelle fiche de poste</h1>

        {{ form_start(form) }}
        {{ form_widget(form) }}
        <button type="submit">Créer</button>
    {{ form_end(form) }}
    
    <div class="return-button">
        <a href="{{ path('post_index') }}">Retour à la liste des postes</a>
    </div>
</div>
{% endblock %}
