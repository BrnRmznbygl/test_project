{% extends 'base.html.twig' %}

{% block title %}Créer une nouvelle fiche de poste{% endblock %}

{% block body %}
<style>
    .form-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
</style>

<div class="form-wrapper">
    <h1>Créer une nouvelle fiche de poste</h1>

    {{ form_start(form) }}
        {{ form_widget(form) }}
        <button type="submit">Créer</button>
    {{ form_end(form) }}

    <a href="{{ path('post_index') }}">Retour à la liste des postes</a>
</div>
{% endblock %}
