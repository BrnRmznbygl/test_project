{% extends 'base.html.twig' %}

{% block title %}Accueil Entreprise{% endblock %}

{% block body %}
    <div class="container">
        <h1>Accueil Entreprise</h1>

        <!-- Profils les plus consultés -->
        <section>
            <h2>Profils les plus consultés</h2>
            <div class="row">
                {% for developper in mostViewedProfiles %}
                    <div class="col-md-4">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title">{{ developper.firstName }} {{ developper.lastName }}</h5>
                                <p class="card-text">Localisation : {{ developper.Localisation }}</p>
                                <p class="card-text">Langages : {{ developper.languages|join(', ') }}</p>
                                <p class="card-text">Vues : {{ developper.views }}</p>
                                <a href="{{ path('developper_profile', {'id': developper.id}) }}" class="btn btn-primary">Voir le profil</a>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </section>

        <!-- Derniers profils créés -->
        <section>
            <h2>Derniers profils créés</h2>
            <div class="row">
                {% for developper in latestProfiles %}
                    <div class="col-md-4">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title">{{ developper.firstName }} {{ developper.lastName }}</h5>
                                <p class="card-text">Localisation : {{ developper.Localisation }}</p>
                                <p class="card-text">Créé le : {{ developper.createdAt|date('d/m/Y') }}</p>
                                <a href="{{ path('developper_profile', {'id': developper.id}) }}" class="btn btn-primary">Voir le profil</a>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </section>
    </div>
{% endblock %}

