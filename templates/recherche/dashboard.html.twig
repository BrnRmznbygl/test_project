{% extends 'base.html.twig' %}

{% block title %}Tableau de bord{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="text-center mb-4">Tableau de bord</h1>

        <!-- Section Notifications -->
        <div class="mb-5">
            <h2 class="mb-4">Notifications</h2>
            {% if notifications is not empty %}
                <div class="list-group">
                    {% for notification in notifications %}
                        <div class="list-group-item d-flex justify-content-between align-items-center shadow-sm mb-3">
                            <div class="d-flex align-items-center">
                                <i class="bi bi-bell-fill text-primary mr-3"></i>
                                <p class="mb-0">{{ notification }}</p>
                            </div>
                            <button class="btn btn-sm btn-outline-primary">Marquer comme lu</button>
                        </div>
                    {% endfor %}
                </div>
            {% else %}
                <div class="alert alert-info text-center" role="alert">
                    <i class="bi bi-exclamation-triangle-fill"></i> Aucune nouvelle notification.
                </div>
            {% endif %}
        </div>

        <!-- Section Historique des Recherches -->
        <div>
            <h2 class="mb-4">Historique des recherches</h2>
            {% if searchHistory is not empty %}
                <ul class="list-group">
                    {% for history in searchHistory %}
                        <li class="list-group-item d-flex justify-content-between align-items-center shadow-sm mb-3">
                            <div>
                                <strong>{{ history.query }}</strong>
                                <small class="text-muted d-block">{{ history.date|date('d/m/Y H:i') }}</small>
                            </div>
                            <button class="btn btn-sm btn-outline-secondary">Supprimer</button>
                        </li>
                    {% endfor %}
                </ul>
            {% else %}
                <div class="alert alert-info text-center" role="alert">
                    <i class="bi bi-search"></i> Aucun historique de recherche.
                </div>
            {% endif %}
        </div>
    </div>
{% endblock %}
