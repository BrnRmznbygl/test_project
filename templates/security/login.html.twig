{% extends 'base.html.twig' %}

{% block body %}
<div class="container-fluid" style="background-image: url('/images/BackgroundLog.jpg'); background-size: cover; background-position: center; height: 100vh; display: flex; align-items: center; justify-content: center;">
    <div class="card" style="max-width: 450px; width: 100%; box-shadow: 0 8px 16px rgba(0, 0, 0, 0.3); border-radius: 15px; overflow: hidden; background-color: rgba(255, 255, 255, 0.95);">
        <div class="card-header text-center" style="background-color: #5b3c11; padding: 20px;">
            <h1 style="color: white; font-size: 1.8em; margin: 0;">Connexion</h1>
        </div>
        <div class="card-body">
            {% if error %}
                <div class="alert alert-danger text-center" style="font-size: 1em;">
                    {{ error.messageKey|trans(error.messageData, 'security') }}
                </div>
            {% endif %}

            <form method="post" style="display: flex; flex-direction: column; gap: 20px;">
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                <input type="text" name="_username" id="username" placeholder="Votre email" required value="{{ last_username }}" style="padding: 10px; border: 1px solid #ccc; border-radius: 5px; font-size: 1em;">
                <input type="password" name="_password" id="password" placeholder="Votre mot de passe" required style="padding: 10px; border: 1px solid #ccc; border-radius: 5px; font-size: 1em;">
                <button type="submit" style="padding: 10px 20px; background-color: #5b3c11; color: white; border: none; border-radius: 5px; font-size: 1.2em; cursor: pointer;">
                    Se connecter
                </button>
            </form>

            <p class="text-center mt-4" style="margin-top: 20px; font-size: 1em;">
                Pas encore inscrit ? 
                <span>
                    <a href="{{ path('app_dev_register') }}" style="color: #5b3c11; font-weight: bold;">Développeur</a> ou 
                    <a href="{{ path('app_company_register') }}" style="color: #5b3c11; font-weight: bold;">Entreprise</a>
                </span>
            </p>
        </div>
        <div class="card-footer text-center" style="padding: 15px; background-color: #F8F9FA;">
            <small style="font-size: 0.9em; color: #6c757d;">© 2025 NexusJobs</small>
        </div>
    </div>
</div>
{% endblock %}